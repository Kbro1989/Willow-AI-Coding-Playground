{
    "name": "antigravity-engine",
    "private": true,
    "version": "4.2.0",
    "type": "module",
    "engines": {
        "node": ">=20.0.0"
    },
    "scripts": {
        "start": "vite",
        "dev": "vite",
        "build:vite": "node --max-old-space-size=8192 node_modules/vite/bin/vite.js build",
        "build": "npm run build:vite && npm run build:worker && npm run build:assets",
        "build:worker": "node buildScripts/buildWorker.js",
        "build:assets": "node buildScripts/copyAssets.js",
        "build:all": "npm run build",
        "preview": "vite preview",
        "test": "vitest run",
        "lint:css": "stylelint \"./index.css\" \"./src/**/*.{css,tsx}\"",
        "deploy": "npm run build:all && wrangler deploy",
        "deploy:staging": "npm run build:all && wrangler deploy --env staging",
        "deploy:production": "npm run build:all && wrangler deploy --env production",
        "type-check": "tsc --noEmit",
        "postinstall": "node -e \"const fs=require('fs'); fs.copyFileSync('tsconfig.base.json', 'node_modules/tsconfig.base.json')\""
    },
    "dependencies": {
        "@google/generative-ai": "^0.24.1",
        "@instantdb/react": "^0.22.96",
        "@monaco-editor/react": "^4.7.0",
        "@react-three/drei": "^10.7.7",
        "@react-three/fiber": "^9.4.2",
        "@react-three/postprocessing": "^3.0.4",
        "@react-three/xr": "^6.6.28",
        "@types/json-schema": "^7.0.15",
        "autobind-decorator": "^2.4.0",
        "buffer": "^6.0.3",
        "classnames": "^2.5.1",
        "cmd-ts": "^0.14.3",
        "comment-json": "^4.5.1",
        "fflate": "^0.8.2",
        "idb-keyval": "^6.2.2",
        "json-schema": "^0.4.0",
        "json-stringify-pretty-compact": "^4.0.0",
        "lucide-react": "^0.562.0",
        "postprocessing": "^6.38.2",
        "react": "^19.2.3",
        "react-dom": "^19.2.3",
        "reactflow": "^11.11.4",
        "three": "^0.182.0",
        "three-stdlib": "^2.36.1"
    },
    "devDependencies": {
        "@testing-library/jest-dom": "^6.9.1",
        "@testing-library/react": "^16.3.1",
        "@types/node": "^22.14.0",
        "@types/react": "^19.0.0",
        "@types/react-dom": "^19.0.0",
        "@types/sqlite3": "^3.1.11",
        "@types/three": "^0.182.0",
        "@vitejs/plugin-react": "^5.0.0",
        "autoprefixer": "^10.4.23",
        "jsdom": "^27.4.0",
        "postcss": "^8.5.6",
        "stylelint": "^16.26.1",
        "stylelint-config-standard": "^39.0.1",
        "tailwindcss": "^3.4.17",
        "typescript": "~5.8.2",
        "vite": "^6.2.0",
        "vitest": "^4.0.16",
        "wrangler": "^4.54.0"
    }
}
